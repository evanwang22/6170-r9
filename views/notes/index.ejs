<div class="container">

	<h3>All the notes</h3>

	<a href="/notes/new" class="btn btn-default">New note</a>

	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<% for (var i = 0; i < notes.length; i++) { %>
			  	<h4><%= notes[i].title %></h4>
			  	<% if (notes[i].author) { %>
			  		<p class="author">written by <%= notes[i].author %></p>
			  	<% } %>
			  	<p class="note"><%= notes[i].text %></p>
			  	<br>
			<% } %>
		</div>
	</div>
</div>
